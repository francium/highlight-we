{
  "manifest_version": 2,
  "name": "Highlight",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon-gray-32.png",
    "default_title": "highlighter-we",
    "default_popup": "static/menu.html"
  },

  "icons": {
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/highlight-we.page.bundle.js"]
    }
  ]

}
